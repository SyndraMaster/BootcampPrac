<%- include("header"); -%>
<div class="box" id="heading">
    <h1><%= saludo %></h1>
    </div>
    <div class="box">
        <% lista.forEach(element => { %>
            <form action="/delete" method="post">
                <div class="item">
                    <input type="checkbox" value="<%= element._id %>" name="checkbox" id="" onchange="this.form.submit()">
                    <p><%= element.nombre %></p>
                </div>
                <input type="hidden" name="listName" value="<%= saludo %>"></input>
            </form>
        <% }) %>
        <form action="/" method="post" class="item">
            <input type="text" name="nuevoElemento" placeholder="Escribe tu Tarea" autocomplete="off">
            <button type="submit" value="<%= saludo %>" name="lists">+</button>
        </form>
    </div>
<%- include("footer"); -%>
        